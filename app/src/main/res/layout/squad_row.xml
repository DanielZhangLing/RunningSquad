<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/squad_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="7">

    <TextView
        android:id="@+id/squad_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/squad_name_color"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/squad_row_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/squad_row_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/squad_row_star"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableRight="@drawable/baseline_star_border_black_18"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/squad_row_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_forward_black_18" />
</TableRow>